<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RboardThemeCreator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="materialAlertDialogTheme">
            @style/Dialog.RboardThemeCreator.MaterialAlertDialog
        </item>

        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">
            @drawable/ic_launcher_animation
        </item>
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore="NewApi">
            @integer/splashAnimationDuration
        </item>
        <item name="android:windowSplashScreenBrandingImage" tools:ignore="NewApi">
            @drawable/dertyp_branding
        </item>
    </style>
</resources>