<resources>
    <!-- Base application theme. -->
    <style name="Theme.RboardThemeCreator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@android:color/system_neutral1_100</item>
        <item name="colorBackgroundFloating">@android:color/system_neutral1_50</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@android:color/system_accent1_600</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_600</item>
        <item name="colorPrimaryContainer">@android:color/system_accent2_100</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_50</item>

        <item name="colorSecondary">@android:color/system_accent1_600</item>
        <item name="colorSecondaryVariant">@android:color/system_accent1_600</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_100</item>
        <item name="colorOnSecondary">@android:color/system_neutral2_900</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/foreground</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@android:color/system_neutral1_50</item>

        <item name="switchStyle">@style/Widget.App.Switch</item>

    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="Theme.RboardThemeCreator">
        <item name="colorPrimary">@android:color/system_accent2_600</item>
        <item name="colorPrimaryContainer">@android:color/system_accent2_200</item>
        <item name="colorOnSurface">@android:color/system_neutral1_100</item>
        <item name="colorOutline">@android:color/system_neutral2_400</item>
    </style>
</resources>